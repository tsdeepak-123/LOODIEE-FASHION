<script>
     function addToCart(id) {
          
            $.ajax({
                url: '/addtocart?id=' + id,
                method: 'GET',
                success: () => {
                   swal.fire("Added to Cart", "", "success");
                    
                }
            })
        } 

         function addToWish(id) {
          
            $.ajax({
                url: '/postwishlist?id=' + id,
                method: 'GET',
                success: (response) => {
                    if(response.status){
                   swal.fire("Added to Wishlist", "", "success");
                }else{
                    swal.fire("Removed From Wishlist", "", "success");
                }
                }
            })
        } 
</script>
          

